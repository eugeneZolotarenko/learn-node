<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length) { %>
                <li>
                    <% orders.forEach((order) => { %>
                        <div>
                            <h1># <%= order._id %></h1>
                            <ul>
                                <% order.items.forEach((product) => { %>
                                    <li><%= product.title %> (<%= product.quantity %>)</li>
                                <% }) %>
                            </ul>
                        </div>
                    <% }) %>
                </li>
            <% } else { %>  
                <h1>Nothing there!</h1>
            <% } %>  
        </main>
        <%- include('../includes/end.ejs') %>